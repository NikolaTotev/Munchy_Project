            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="i18n/MainWindow.en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="SettingsCloseOpacityUP">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="btn_CloseSettings">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0.3"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="SettingsCloseOpacityDOWN">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="btn_CloseSettings">
                    <EasingDoubleKeyFrame KeyTime="0" Value="0.3"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="0.3"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="btn_CloseSettings">
            <BeginStoryboard Storyboard="{StaticResource SettingsCloseOpacityUP}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="btn_CloseSettings">
            <BeginStoryboard Storyboard="{StaticResource SettingsCloseOpacityDOWN}"/>
        </EventTrigger>
