<Window x:Class="MunchyUI_Prototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunchyUI_Prototype"
        mc:Ignorable="d"
        Title="Munchy" Height="550" Width="900" WindowStartupLocation="CenterScreen" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinWidth="900" MinHeight="550">
    <Viewbox>
        <Grid ShowGridLines="False" UseLayoutRounding="True" MinWidth="400" MinHeight="350" ScrollViewer.CanContentScroll="True" VerticalAlignment="Center" HorizontalAlignment="Center" Height="536" Width="924">
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="154*"/>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="34*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="Auto" MinWidth="266"/>
                <ColumnDefinition Width="209*"/>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Fill="#FFF4F4F5" Margin="67,-1,102,26" Grid.Column="2"/>

            <Ellipse Height="298" Margin="47,5,61,5" Width="310" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/chickenDinner.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock TextWrapping="Wrap" Margin="73,11,0,0" Height="26" Width="85" FontFamily="Roboto Black" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Foreground="#FF424242"><Run Text="Calories:"/><LineBreak/><Run/></TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="0,11,66,0" Height="26" Width="130" FontFamily="Roboto Black" FontSize="20" Text="Diet Balance:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="3" Foreground="#FF424242"/>
            <TextBlock Height="25" Margin="76,41,0,0" TextWrapping="Wrap" Text="1500" Width="81" TextAlignment="Center" FontFamily="Roboto Medium" FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Foreground="#FF424242"/>
            <TextBlock Height="25" Margin="0,41,76,0" TextWrapping="Wrap" Text="Good" Width="81" TextAlignment="Center" FontFamily="Roboto Medium" FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="3" Foreground="#FF424242"/>
            <TextBlock Height="41" Margin="18,10,0,0" TextWrapping="Wrap" Text="Favorite Recipes" Width="215" TextAlignment="Center" FontFamily="Shrikhand" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Foreground="#FF424242"/>
            <TextBlock Height="34" Margin="0,10,6,12" TextWrapping="Wrap" Width="220" TextAlignment="Center" FontFamily="Shrikhand" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Foreground="#FF424242"><Run Text="Recent Foods"/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="tB_UserName" Margin="67,4,102,29" TextWrapping="Wrap" Text="Nikola" TextAlignment="Center" FontFamily="Shrikhand" FontSize="24" Grid.Column="2" Foreground="#FF424242"/>
            <TextBlock Height="36" Margin="80,0,78,2" TextWrapping="Wrap" Text="Chicken Dinner" Width="260" TextAlignment="Center" FontFamily="Shrikhand" FontSize="24" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="3" Foreground="#FF424242"/>
            <Ellipse Height="76" Margin="27,41,0,191" Width="77" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/c700x420.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Height="76" Margin="153,41,0,191" Width="77" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/chickenDinner.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Height="80" Margin="85,117,0,111" Width="79" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/cake.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Height="78" Margin="153,191,0,39" Width="77" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/psta.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Height="78" Margin="27,191,0,39" Width="77" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Images/compost-cookies-31-800.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
            <Button x:Name="btn_SeeAllSavedRecipes" Content="See All" Height="38" Margin="47,0,0,67" Width="153" FontFamily="Roboto Black" FontSize="18" Foreground="#FF424242" BorderBrush="{x:Null}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Click="btn_SeeAllSavedRecipes_Click"/>
            <ListBox x:Name="lb_Fridge" Height="288" Margin="0,10,21,10" Width="181" Background="#FFCFCFCF" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Grid.Row="2"/>
            <DockPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="100" LastChildFill="False" Grid.RowSpan="2" VerticalAlignment="Top" Width="100"/>
            <Button x:Name="btn_SuggestRecipe" Content="Suggest Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Grid.Column="2" Margin="121,10,0,0" Grid.Row="1" Height="36" BorderBrush="{x:Null}" Foreground="#FF424242" FontSize="18" FontFamily="Roboto Black" Click="btn_SuggestRecipe_Click"/>
            <Button x:Name="btn_ShowRecipe" Content="Show Recipe" Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="121,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="145" BorderBrush="{x:Null}" Foreground="#FF424242" FontFamily="Roboto Black" FontSize="18" Click="btn_ShowRecipe_Click"/>
            <Button x:Name="btn_Showfridge" Content="Show all foods" Grid.Column="3" HorizontalAlignment="Left" Height="38" Margin="62,1,0,0" Grid.Row="3" Grid.RowSpan="2" VerticalAlignment="Top" Width="138" BorderBrush="{x:Null}" FontFamily="Roboto Black" FontSize="18" Foreground="#FF424242" Click="btn_Showfridge_Click"/>
            <Grid Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="483" Grid.RowSpan="5" VerticalAlignment="Top" Width="848" Margin="36,22,0,0" Background="#CA000000">
                <TextBlock Height="67" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Margin="292,0,306,0" FontFamily="Shrikhand" FontSize="48" Foreground="White" TextAlignment="Center"/>
                <CheckBox x:Name="cb_IsVegetarian" Content="I'm Vegetarian" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,59,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Vegan" Content="I'm Vegan" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,89,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Diabetic" Content="I'm Diabetic" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,146,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Nuts" Content="Nuts" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,218,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Gluten" Content="Gluten" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,248,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Soy" Content="Soy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,278,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Fish" Content="Fish" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,308,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Eggs" Content="Eggs" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,333,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Vegan_Copy6" Content="Dairy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="632,363,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <TextBlock Height="29" TextWrapping="Wrap" Text="Allergies" VerticalAlignment="Top" Margin="566,189,32,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center"/>
                <TextBlock Height="29" TextWrapping="Wrap" Text="Food Preferences" VerticalAlignment="Top" Margin="588,25,10,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center"/>
                <TextBlock Height="29" TextWrapping="Wrap" Text="Health Concerns" VerticalAlignment="Top" Margin="578,117,20,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="162,113,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="155"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="162,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="155"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="162,175,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="155"/>
                <TextBlock Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,113,696,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center"><Run Text="Name"/><LineBreak/><Run/></TextBlock>
                <TextBlock Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Margin="15,143,691,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center"><Run Text="Age"/><LineBreak/><Run/></TextBlock>
                <TextBlock Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Margin="15,169,691,0" FontFamily="Roboto Thin" FontSize="22" Foreground="White" TextAlignment="Center" Text="Weight"/>
                <CheckBox x:Name="cb_Vegan_Copy7" Content="Female&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="162,248,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20"/>
                <CheckBox x:Name="cb_Vegan_Copy8" Content="Male&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="51,248,0,0" Height="25" Width="163" Foreground="White" FontFamily="Roboto Medium" FontSize="20" Checked="cb_Vegan_Copy8_Checked"/>
            </Grid>

        </Grid>
    </Viewbox>
</Window>
