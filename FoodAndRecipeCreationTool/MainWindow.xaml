<Window x:Name="Munchy_Tools" x:Class="FoodAndRecipeCreationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodAndRecipeCreationTool"
        mc:Ignorable="d"
        Title="Munchy Tools
        " Height="541" Width="622" MinWidth="900" MinHeight="550">
    <Viewbox>
        <Grid x:Name="MainPanel" ShowGridLines="False" UseLayoutRounding="True" MinWidth="400" MinHeight="350" ScrollViewer.CanContentScroll="True" VerticalAlignment="Center" HorizontalAlignment="Center" Height="682" Width="1171" Background="White">
            <Grid x:Name="P_RecipeTool" HorizontalAlignment="Left" Height="682" Grid.RowSpan="2" VerticalAlignment="Top" Width="1171" Background="#FF3DA5D9" Visibility="Visible"/>


            <Grid x:Name="P_FoodTool" Background="#FFBBE5ED" HorizontalAlignment="Left" Height="682" Grid.RowSpan="2" Visibility="Visible" VerticalAlignment="Top" Width="1171">
                <TextBlock x:Name="l_FoodName" HorizontalAlignment="Left" Height="37" Margin="486,103,0,0" TextWrapping="Wrap" Text="Food Item Name" VerticalAlignment="Top" Width="189" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358"/>
                <TextBox x:Name="tb_InputFoodName" HorizontalAlignment="Left" Height="37" Margin="463,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="l_FoodName_Copy" HorizontalAlignment="Left" Height="37" Margin="321,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="106" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" TextAlignment="Center"><Run Text="Calories"/><LineBreak/><Run/></TextBlock>
                <TextBlock x:Name="l_FoodName_Copy1" HorizontalAlignment="Left" Height="37" Margin="541,231,0,0" TextWrapping="Wrap" Text="Protein" VerticalAlignment="Top" Width="87" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" TextAlignment="Center"/>
                <TextBlock x:Name="l_FoodName_Copy2" HorizontalAlignment="Left" Height="37" Margin="406,635,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" FontFamily="Roboto Black" FontSize="24" Foreground="#FFFF6B6B" Text="All nutritional values are per 100g" TextAlignment="Center"/>
                <TextBlock x:Name="l_FoodName_Copy3" HorizontalAlignment="Left" Height="37" Margin="756,231,0,0" TextWrapping="Wrap" Text="Fat" VerticalAlignment="Top" Width="87" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" RenderTransformOrigin="0.342,0.468" TextAlignment="Center"/>
                <TextBlock x:Name="l_FoodName_Copy4" HorizontalAlignment="Left" Height="37" Margin="332,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" TextAlignment="Center"><Run Text="Carbs"/><LineBreak/><Run/></TextBlock>
                <TextBlock x:Name="l_FoodName_Copy5" HorizontalAlignment="Left" Height="37" Margin="541,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" Text="Sugars" TextAlignment="Center"/>
                <TextBlock x:Name="l_FoodName_Copy6" HorizontalAlignment="Left" Height="37" Margin="756,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" TextAlignment="Center"><Run Text="Sodium"/><LineBreak/><Run/></TextBlock>
                <TextBox x:Name="tb_InputFoodName_Copy" HorizontalAlignment="Left" Height="37" Margin="321,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy1" HorizontalAlignment="Left" Height="37" Margin="532,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy2" HorizontalAlignment="Left" Height="37" Margin="740,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy3" HorizontalAlignment="Left" Height="37" Margin="321,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy4" HorizontalAlignment="Left" Height="37" Margin="532,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy5" HorizontalAlignment="Left" Height="37" Margin="740,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBox x:Name="tb_InputFoodName_Copy6" HorizontalAlignment="Left" Height="37" Margin="532,483,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" BorderBrush="{x:Null}" Foreground="#FF555358" FontFamily="Roboto" FontSize="22" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="l_FoodName_Copy7" HorizontalAlignment="Left" Height="37" Margin="490,441,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" FontFamily="Roboto Black" FontSize="24" Foreground="#FF555358" Text="Unit Of Measure" TextAlignment="Center"/>
                <Button Content="Save " HorizontalAlignment="Left" Height="61" Margin="495,554,0,0" VerticalAlignment="Top" Width="192" FontFamily="Fugaz One" FontSize="36" Background="#FF2364AA" BorderBrush="{x:Null}" Foreground="White"/>
            </Grid>
            <Grid Height="60" VerticalAlignment="Top" Background="#FF555358" ClipToBounds="True" Margin="0,0,-1,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="618*"/>
                    <ColumnDefinition Width="245*"/>
                    <ColumnDefinition Width="226*"/>
                    <ColumnDefinition Width="83*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Btn_OpenRecipeTool" Content="Recipe Tool" Height="61" VerticalAlignment="Top" Margin="10,10,12,-11" BorderBrush="{x:Null}" Background="#FF3DA5D9" Foreground="White" FontFamily="Fugaz One" FontSize="24" Grid.Column="1" Width="194" Click="Btn_OpenRecipeTool_Click" MouseEnter="BTN_RecipeTool_MouseEnter"/>
                <Button x:Name="Btn_OpenFoodTool" Content=" Food Tool" HorizontalAlignment="Left" Height="60" Margin="14,10,0,-10" VerticalAlignment="Top" Width="194" FontFamily="Fugaz One" FontSize="24" Background="#FFBBE5ED" BorderBrush="{x:Null}" Foreground="#FF555358" Grid.Column="2" Click="Btn_OpenFoodTool_Click"/>
                <TextBlock HorizontalAlignment="Left" Margin="53,0,0,0" TextWrapping="Wrap" Text="Munchy Tools" VerticalAlignment="Top" Height="60" Width="254" FontSize="36" FontFamily="Fugaz One" Foreground="White"/>
            </Grid>


        </Grid>
    </Viewbox>
</Window>
